<%= form_for @local_point, :html => {:class => 'form-horizontal'} do |f| %>
  <%= f.hidden_field :latitude %>
  <%= f.hidden_field :longitude %>
  <fieldset>
    <legend>セッションスポットを紹介する</legend>
    <div class="control-group">
      <label class="control-label" for="point_name">店名</label>
      <div class="controls">
        <%= f.text_field :point_name, :placeholder => "ライブスポットHoge", :class => "input-large" %>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for="address">住所</label>
      <div class="controls">
        <%= f.text_field :address, :placeholder => "東京都○○区×× 1-2-3 Hogeビル", :class => "input-large" %>
        <button type="button" class="btn" id="update_center_by_address">住所から位置取得</button>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for="site_url">WebサイトURL(任意)</label>
      <div class="controls">
        <%= f.text_field :site_url, :placeholder => "http://www.hoge.com/top", :class => "input-large" %>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for="description">簡単なご説明(任意)</label>
      <div class="controls">
        <%= f.text_area :description, :rows => 5, :class => 'input-xlarge' do %>
          TODO: placeholderが使えるか確認する
          セッション日程：毎週金曜日２０時〜
          主なジャンル：ジャズ、ファンク、ロック、フリー
          参加料：無料/一回1,000円
          主要楽器：ドラムス(あり/なし)  ピアノ(あり/なし)
        <% end %>
      </div>
    </div>
    <div class="control-group">
      <div class="controls">
        <% if @new_mode %>
        <button type="submit" class="btn btn-success">追加</button>
        <% else %>
        <button type="submit" class="btn btn-success">更新</button>
        <% end %>
      </div>
    </div>
  </fieldset>
<% end %>
